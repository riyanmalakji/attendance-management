<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Homepage"
    android:background="@drawable/real">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <RelativeLayout
        android:layout_marginTop="52dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
      <TextView
          android:id="@+id/txtdashboard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:textColor="@color/black"
          android:text="Manuals">
      </TextView>
      <TextView
          android:layout_below="@id/txtdashboard"
          android:layout_marginTop="6dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="20sp"
          android:textColor="#BFC4E1"
          android:text="Select Semester"></TextView>
      <ImageView
          android:layout_alignParentRight="true"
          android:src="@drawable/botlogo"
          android:layout_width="62dp"
          android:layout_height="62dp"
          android:layout_marginTop="-12dp"></ImageView>
    </RelativeLayout>
    <GridLayout
        android:layout_marginTop="120dp"
        android:columnOrderPreserved="false"
        android:alignmentMode="alignMargins"
        android:rowCount="5"
        android:columnCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

      <androidx.cardview.widget.CardView
          android:id="@+id/onesem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/oneone"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/twosem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/first"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/threesem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/three3"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/foursem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/four4"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/fivesem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/five5"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>
      <androidx.cardview.widget.CardView
          android:id="@+id/sixsem"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_columnWeight="1"
          android:layout_rowWeight="1"
          app:cardElevation="6dp"
          app:cardCornerRadius="12dp"
          android:layout_margin="12dp"
          >
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="16dp">
          <ImageView
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:src="@drawable/six6"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="sem"
              android:textSize="18sp"
              android:textColor="@color/black"
              android:layout_marginTop="12dp"></TextView>
        </LinearLayout>
      </androidx.cardview.widget.CardView>

    </GridLayout>
  </LinearLayout>
</ScrollView>